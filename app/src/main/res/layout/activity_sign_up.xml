<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/colorBackground2"
    tools:context=".SignUpActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@string/sign_up"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="@font/poppins_semi_bold"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="@string/sign_up_information"
        android:textColor="@color/colorText3"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@+id/textSignUp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFullName"
        android:paddingTop="50dp"
        android:text="@string/textFullName"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/textInformation"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/inputTextFullName"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/input_background"
        android:hint="@string/textHintFullName"
        android:textColorHint="@color/colorText3"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/textFullName"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textUsername"
        android:paddingTop="20dp"
        android:text="@string/textUsername"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/inputTextFullName"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/inputTextUsername"
        android:drawableStart="@drawable/ic_username"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/input_background"
        android:hint="@string/textHintUsername"
        android:textColorHint="@color/colorText3"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/textUsername"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textEmailAddress"
        android:paddingTop="20dp"
        android:text="@string/textEmailAddress"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/inputTextUsername"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextEmail"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/input_background"
        android:hint="@string/textHintEmailAddress"
        android:textColorHint="@color/colorText3"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/textEmailAddress"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPassword"
        android:paddingTop="20dp"
        android:text="@string/textPassword"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextPassword"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/input_background"
        android:hint="@string/textHintPassword"
        android:textColorHint="@color/colorText3"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/textPassword"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:paddingTop="30dp"
        android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>